{
  "name": "typed-translations",
  "version": "0.1.1",
  "description": "Use and define translations in Typescript without hassle.",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/src/index.js",
  "bin": {
    "typed-translations": "./dist/src/extractTranslations.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "npm i -g && typed-translations test/translations test/public/locales",
    "create": "npm run build && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "keywords": [
    "i18n",
    "reacti18next",
    "translation"
  ],
  "homepage": "https://github.com/dstawinski/typed-translations",
  "author": "Dominik Stawi≈Ñski <dominik.stawinski@dreamlab.pl>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^12.12.8",
    "husky": "^3.0.9",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@types/fs-extra": "^8.0.1",
    "fs-extra": "^8.1.0"
  }
}
